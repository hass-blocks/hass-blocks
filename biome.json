{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "linter": {
    "ignore": [".nx", ".astro", "dist", "out-tsc", "test-output"],

    "rules": {
      "complexity": {
        "noUselessConstructor": "off",
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noThenProperty": "off"
      }
    }
  }
}
