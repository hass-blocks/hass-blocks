{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib": ["./src/app/lib/index.ts"],
      "@components": ["./src/app/components/index.ts"],
      "@chakra": ["./src/app/chakra/index.ts"],
      "@providers": ["./src/app/providers/index.ts"],
      "@hooks": ["./src/app/hooks/index.ts"],
      "@blocks-codegen": ["./src/blocks-codegen/index.ts"]
    },
    "module": "preserve",
    "moduleResolution": "bundler",
    "types": ["node", "vite/client", "@react-router/node"]
  },
  "include": [
    "./src/app/**/*.ts",
    "./src/app/**/*.tsx",
    "./src/app/**/*.js",
    "./src/app/**/*.jsx",
    ".server/**/*.ts",
    ".server/**/*.tsx",
    ".client/**/*.ts",
    ".client/**/*.tsx"
  ],
  "exclude": [
    "react-router.config.ts",
    "./src/app/components/vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx"
  ],
  "references": [
    {
      "path": "../packages/websocket-plugin"
    },
    {
      "path": "../packages/core"
    },
    {
      "path": "../packages/cli"
    }
  ]
}
