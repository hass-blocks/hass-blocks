{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@lib": ["app/lib/index.ts"],
      "@components": ["app/components/index.ts"],
      "@providers": ["app/providers/index.ts"],
      "@hooks": ["app/hooks/index.ts"],
      "@blocks-codegen": ["blocks-codegen/index.ts"]
    },
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "types": ["node", "vite/client"]
  },
  "include": ["node/**/*.ts", "node/**/*.js"],
  "exclude": [
    ".server/**/*.ts",
    ".server/**/*.tsx",
    ".client/**/*.ts",
    ".client/**/*.tsx",
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "app/vite.config.ts",
    "vite.config.mts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.config.mts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx"
  ],
  "references": [
    {
      "path": "../packages/websocket-plugin"
    },
    {
      "path": "../packages/core"
    }
  ]
}
