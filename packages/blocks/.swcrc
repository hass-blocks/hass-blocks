{
  "jsc": {
    "baseUrl": "./",
    "paths": {
      "@actions": ["src/lib/actions/index.ts"],
      "@assertions": ["src/lib/assertions/index.ts"],
      "@triggers": ["src/lib/triggers/index.ts"],
      "@utils": ["src/lib/utils/index.ts"]
    },
    "target": "es2017",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true,
    "experimental": {
      "plugins": [["swc-plugin-allow-importing-ts-extensions", {}]]
    }
  },
  "module": {
    "type": "es6",
    "resolveFully": true,
    "outFileExtension": "js"
  },
  "sourceMaps": true,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    ".*\\.test.tsx?$",
    "./src/jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.js$"
  ]
}
