{
  "jsc": {
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@building-blocks": ["src/building-blocks/index.ts"],
      "@client": ["src/client/index.ts"],
      "@sequence-validator": ["src/sequence-validator/index.ts"],
      "@core": ["src/core/index.ts"],
      "@errors": ["src/errors/index.ts"],
      "@show": ["src/show/index.ts"],
      "@targets": ["src/targets/index.ts"],
      "@test-support": ["src/test-support/index.ts"],
      "@types": ["src/types/index.ts"],
      "@utils": ["src/utils/index.ts"]
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true,
    "experimental": {
      "plugins": [["swc-plugin-allow-importing-ts-extensions", {}]]
    }
  },
  "module": {
    "type": "es6",
    "resolveFully": true,
    "outFileExtension": "js"
  },
  "sourceMaps": true,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    ".*\\.test.tsx?$",
    "./src/jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.js$"
  ]
}
