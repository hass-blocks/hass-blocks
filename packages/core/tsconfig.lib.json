{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@building-blocks": ["./src/building-blocks/index.ts"],
      "@client": ["./src/client/index.ts"],
      "@core": ["./src/core/index.ts"],
      "@sequence-validator": ["./src/sequence-validator/index.ts"],
      "@errors": ["./src/errors/index.ts"],
      "@show": ["./src/show/index.ts"],
      "@targets": ["./src/targets/index.ts"],
      "@test-support": ["./src/test-support/index.ts"],
      "@types": ["./src/types/index.ts"],
      "@actions": ["./src/actions/index.ts"],
      "@assertions": ["./src/assertions/index.ts"],
      "@utils": ["./src/utils/index.ts"],
      "@entities": ["./src/entities/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../packages/hass-ts"
    },
    {
      "path": "../../packages/hass-mqtt"
    }
  ],
  "exclude": [
    "dist/**",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*-d.ts",
    "src/test-support/matcher.ts"
  ]
}
