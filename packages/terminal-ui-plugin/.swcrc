{
  "jsc": {
    "target": "es2017",
    "parser": {
      "syntax": "typescript",
      "jsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./",
    "paths": {
      "@components": ["src/lib/components/index.ts"],
      "@types": ["src/lib/types/index.ts"]
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true,
      "react": {
        "runtime": "automatic"
      }
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true,
    "experimental": {
      "plugins": [["swc-plugin-allow-importing-ts-extensions", {}]]
    }
  },
  "module": {
    "type": "es6",
    "resolveFully": true,
    "outFileExtension": "js"
  },
  "sourceMaps": true,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    ".*\\.test.tsx?$",
    "./src/jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.js$"
  ]
}
