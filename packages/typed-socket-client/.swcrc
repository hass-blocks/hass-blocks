{
  "jsc": {
    "baseUrl": "./",
    "paths": {
      "@backend": ["./src/backend/index.ts"],
      "@client": ["./src/client/index.ts"],
      "@errors": ["./src/errors/index.ts"],
      "@core": ["./src/core/index.ts"],
      "@types": ["./src/types/index.ts"]
    },
    "target": "es2017",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true,
    "experimental": {
      "plugins": [["swc-plugin-allow-importing-ts-extensions", {}]]
    }
  },
  "module": {
    "type": "es6",
    "resolveFully": true,
    "outFileExtension": "js"
  },
  "sourceMaps": true,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    ".*\\.test.tsx?$",
    "./src/jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.js$"
  ]
}
